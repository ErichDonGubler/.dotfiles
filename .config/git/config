[user]
	email = erichdongubler@gmail.com
	name = Erich Gubler
[pull]
	ff = only
[push]
	default = simple
[merge]
	ff = only
	tool = p4merge
[mergetool "p4merge"]
	cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
[rebase]
	autostash = true
[stash]
	autostash = true
[log]
	decorate = full
[alias]
	add-no-whitespace = !"f() { git diff-no-whitespace -U0 --no-color \"$@\" | git apply --cached --ignore-whitespace --unidiff-zero -; } f"
	delta = diff --color-words --no-index
	diff-words = diff --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'
	diff-no-whitespace = diff --ignore-space-at-eol -b -w --ignore-blank-lines
	ls = status
	pl = !git prettylog
	prettylog = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
	pushup = !git up && git push
	restart = "!f() { read -n1 -p \"warning: you are about to wipe out your entire local repo. Are you sure you want to do this? (y/n) \" confirmation; echo -e \"\n\"; if [ \"$confirmation\" = \"y\" ]; then rm -rf .* *; git start \"$@\"; else echo \"Aborting.\"; fi;  }; f"
	root = !cd "\"$(git rev-parse --show-toplevel)\""
	up = !git pull --rebase --prune $@ && git submodule update --init --recursive
	update = !git stash && git up && git stash pop
	uplog = !git up && git prettylog --since yesterday
[core]
	autocrlf = input
	longpaths = true
	fscache = true
	pager = less -x1,5
[color]
	ui = true
[credential]
	helper = store
[diff]
	colorMoved = dimmed_zebra
	tool = kdiff3
[difftool]
	prompt = false
[svn]
	pushmergeinfo = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
